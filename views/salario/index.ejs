<%- include('../layout/header') %>
<%- include('../scripts/scripts') %>

    <div class="container">
        <div class="row my-4">
            <div class="col-lg-12">
                <% if (message) { %>
                    <div class="alert alert-dismissable fade show alert-<% message.type %>" role="alert">
                        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Fechar"></button>
                        <strong>
                            <%= message.message %>
                        </strong>
                    </div>
                    <% } %>
                        <h2>
                            <%= title %>
                        </h2>
                        <a href="/salario/create" class="btn btn-primary mb-2">Novo Cadastro</a>
                        <div class="table-responsive">
                            <% if (salario !='' ) { %>
                                <table class="table table-striped text-center my-2">
                                    <thead>
                                        <tr class="table-dark">
                                            <th class="text-center">ID</th>
                                            <th class="text-center">Município</th>
                                            <th class="text-center">Candidato</th>
                                            <th class="text-center">Função</th>
                                            <th class="text-center">Valor</th>
                                            <th class="text-center">Tipo</th>
                                            <th class="text-center">Carga Horária</th>
                                            <th class="text-center">Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% salario.forEach((row, index)=> { %>
                                            <tr class="align-middle">
                                                <td style="text-align: center;">
                                                    <%= row.idSalario %>
                                                </td>
                                                <td style="text-align: center;">
                                                    <%= row.municipio %>
                                                </td>
                                                <td style="text-align: center;">
                                                    <%= row.nrCandidato %>
                                                </td>
                                                <td style="text-align: center;">
                                                    <%= row.nmFuncao %>
                                                </td>
                                                <td style="text-align: center;">
                                                    R$ <%= formatValor(row.valor) %>
                                                </td>
                                                <td style="text-align: center;">
                                                    <%= row.tipo %>
                                                </td>
                                                <td style="text-align: center;">
                                                    <%= row.cgHoraria %> h
                                                </td style="text-align: center;">
                                                <td class="text-center align-middle">
                                                    <a href="/salario/view/<%= row.idSalario %>" class=""
                                                        title="Ver detalhes"><i
                                                        class="fa-solid fa-eye mx-1"></i></a>
                                                    <a href="/salario/edit/<%= row.idSalario %>" class="text-success"
                                                        title="Editar"><i
                                                            class="fas fa-edit fa-lg mx-1"></i></a>
                                                    <a href="javascript:void(0);" class="text-danger delete-btn"
                                                        data-url="/salario/delete/<%= row.idSalario %>"
                                                        title="Deletar">
                                                        <i class="fas fa-trash fa-lg mx-1"></i>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                                <% } else{ %>
                                    <h1 class="text-center text-secondary mt-5">Nenhum salário encontrado no banco de
                                        dados.</h1>
                                    <% } %>

                        </div>
            </div>
        </div>
    </div>

    <!-- Modal para confirmação de exclusão -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmação de Exclusão</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Tem certeza de que deseja excluir este cadastro?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Sim</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Não</button>
                    
                </div>
            </div>
        </div>
    </div>
    <%- include('../layout/footer') %>