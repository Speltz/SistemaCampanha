<%- include('../layout/header') %>
    <div class="container">
        <div class="row my-4">
            <div class="col-lg-12">
                <% if (message) { %>
                    <div class="alert alert-dismissable fade show alert-<% message.type %>" role="alert">
                        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Fechar"></button>
                        <strong>
                            <%= message.message %>
                        </strong>
                    </div>
                    <% } %>
                        <h2>
                            <%= title %>
                        </h2>
                        <a href="/funcao/create" class="btn btn-primary mb-2">Novo Cadastro</a>
                        <div class="table-responsive">
                            <% if (funcao !='' ) { %>
                                <table class="table table-striped text-center my-2">
                                    <thead>
                                        <tr class="table-dark">
                                            <th>ID</th>
                                            <th>Função</th>
                                            <th>Descrição</th>
                                            <th>Tipo de contrato</th>
                                            <th>Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% funcao.forEach((row, index)=> { %>
                                            <tr class="align-middle">
                                                <td>
                                                    <%= row.idFuncao %>
                                                </td>
                                                <td>
                                                    <%= row.nmFuncao %>
                                                </td>
                                                <td>
                                                    <%= row.dsFuncao %>
                                                </td>
                                                <td>
                                                    <%= row.tpContrato %>
                                                </td>
                                                <td class="text-center align-middle">
                                                    <a href="/funcao/edit/<%= row.idFuncao %>" class="text-success"><i
                                                            class="fas fa-edit fa-lg mx-1"></i></a>
                                                    <a href="/funcao/delete/<%= row.idFuncao %>" class="text-danger"><i
                                                            class="fas fa-trash fa-lg mx-1"></i></a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                                <% } else{ %>
                                    <h1 class="text-center text-secondary mt-5">Nenhuma função encontrada no banco de
                                        dados.</h1>
                                    <% } %>

                        </div>
            </div>
        </div>
    </div>
    <%- include('../layout/footer') %>