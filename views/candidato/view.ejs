<%- include('../layout/header') %>
<%- include('../scripts/scripts') %>
<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h5 class="text-light">Dados do Candidato</h5>
                </div>
                <div class="card-body p-4">
                    <form id="view-form">
                        <input type="hidden" name="originalNrCandidato" value="<%= candidato.nrCandidato %>"/>
                        <div class="mb-3">
                            <label for="nrCandidato">Número</label>
                            <input type="number" name="nrCandidato" class="form-control form-control-lg"
                                placeholder="Número" required value="<%= candidato.nrCandidato %>" readonly />
                        </div>
                        <div class="mb-3">
                            <label for="partido">Partido</label>
                            <input type="text" name="partido" class="form-control form-control-lg"
                                placeholder="Partido" required value="<%= candidato.partido %>" readonly />
                        </div>
                        <div class="mb-3">
                            <div class="mb-3">
                                <label for="cargo">Cargo</label>
                                <input type="text" name="cargo" class="form-control form-control-lg"
                                    placeholder="Cargo" required value="<%= candidato.cargo %>" readonly />
                            </div>
                            <div class="mb-3">
                                <div class="mb-3">
                                    <label for="municipio">Município</label>
                                    <input type="text" name="municipio" class="form-control form-control-lg"
                                        placeholder="Município" required value="<%= candidato.municipio %>" readonly />
                                </div>
                                <div class="mb-3">
                                    <div class="mb-3">
                                        <label for="nmCandidato">Nome - Candidato</label>
                                        <input type="text" name="nmCandidato" class="form-control form-control-lg"
                                            placeholder="Nome" required value="<%= candidato.nmCandidato %>" readonly />
                                    </div>
                                    <div class="mb-3">
                                        <label for="cnpj">CNPJ</label>
                                        <input type="text" name="cnpj" class="form-control form-control-lg"
                                            placeholder="CNPJ" required value="<%= candidato.cnpj %>"
                                            data-mask="00.000.000/0000-00" readonly />
                                    </div>
                                    <div class="mb-3">
                                        <label for="enderecoCandidato">Endereço - Candidato</label>
                                        <input type="text" name="enderecoCandidato" class="form-control form-control-lg"
                                            placeholder="Endereço" required value="<%= candidato.enderecoCandidato %>" readonly />
                                    </div>
                                    <div class="mb-3">
                                        <label for="bairroCandidato">Bairro - Candidato</label>
                                        <input type="text" name="bairroCandidato" class="form-control form-control-lg"
                                            placeholder="Bairro" required value="<%= candidato.bairroCandidato %>" readonly />
                                    </div>
                                    <div class="mb-3">
                                        <label for="cidadeCandidato">Cidade - Candidato</label>
                                        <input type="text" name="cidadeCandidato" class="form-control form-control-lg"
                                            placeholder="Cidade" required value="<%= candidato.cidadeCandidato %>" readonly />
                                    </div>
                                    <div class="mb-3">
                                        <label for="ufCandidato">UF - Candidato</label>
                                        <select name="ufCandidato" class="form-control form-control-lg" required disabled>
                                            <option value="" disabled selected hidden>Selecione o estado</option>
                                            <% uf.forEach(uf => { %>
                                                <option value="<%= uf.uf %>" <%= candidato.ufCandidato == uf.uf ? 'selected' : '' %>>
                                                    <%= uf.uf %></option>
                                            <% }); %>
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <label for="cepCandidato">CEP - Candidato</label>
                                        <input type="text" name="cepCandidato" class="form-control form-control-lg"
                                            placeholder="CEP" required value="<%= candidato.cepCandidato %>" data-mask="00000-000"
                                            readonly />
                                    </div>
                                    <div class="card-header bg-primary">
                                        <h5 class="text-light">Dados do Administrador Financeiro</h5>
                                    </div>
                                    <div class="mb-3">
                                        <label for="cpfAdmFinanceiro">CPF - Administrador Financeiro</label>
                                        <input type="text" name="cpfAdmFinanceiro" class="form-control form-control-lg"
                                            placeholder="CPF" required value="<%= candidato.cpfAdmFinanceiro %>" data-mask="000.000.000-00"
                                            readonly />
                                    </div>
                                    <div class="mb-3">
                                        <label for="rgAdmFinanceiro">RG - Administrador Financeiro</label>
                                        <input type="text" name="rgAdmFinanceiro" class="form-control form-control-lg"
                                            placeholder="RG" required value="<%= candidato.rgAdmFinanceiro %>"
                                            oninput="validateNumberLength(this, 12)" readonly />
                                    </div>
                                    <div class="mb-3">
                                        <label for="ecAdmFinanceiro">Estado Civil - Administrador Financeiro</label>
                                        <select name="ecAdmFinanceiro" class="form-control form-control-lg" required disabled>
                                            <option value="Solteiro"
                                            <%= candidato.ecAdmFinanceiro === 'Solteiro' ? 'selected' : '' %>>Solteiro
                                            </option>
                                            <option value="Casado"
                                            <%= candidato.ecAdmFinanceiro === 'Casado' ? 'selected' : '' %>>Casado
                                            </option>
                                            <option value="Separado"
                                            <%= candidato.ecAdmFinanceiro === 'Separado' ? 'selected' : '' %>>Separado
                                            </option>
                                            <option value="Divorciado"
                                            <%= candidato.ecAdmFinanceiro === 'Divorciado' ? 'selected' : '' %>>Divorciado
                                            </option>
                                            <option value="Viúvo"
                                            <%= candidato.ecAdmFinanceiro === 'Viúvo' ? 'selected' : '' %>>Viúvo
                                        </option>
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <label for="profAdmFinanceiro">Profissão - Administrador Financeiro</label>
                                        <input type="text" name="profAdmFinanceiro" class="form-control form-control-lg"
                                            placeholder="Profissão" required value="<%= candidato.profAdmFinanceiro %>" readonly />
                                    </div>
                                    <div class="mb-3">
                                        <label for="nmAdmFinanceiro">Nome - Administrador Financeiro</label>
                                        <input type="text" name="nmAdmFinanceiro" class="form-control form-control-lg"
                                            placeholder="Nome" required value="<%= candidato.nmAdmFinanceiro %>" readonly />
                                    </div>
                                    <div class="mb-3">
                                        <label for="enderecoAdmFinanceiro">Endereço - Administrador Financeiro</label>
                                        <input type="text" name="enderecoAdmFinanceiro" class="form-control form-control-lg"
                                            placeholder="Endereço" required value="<%= candidato.enderecoAdmFinanceiro %>" readonly />
                                    </div>
                                    <div class="mb-3">
                                        <label for="bairroAdmFinanceiro">Bairro - Administrador Financeiro</label>
                                        <input type="text" name="bairroAdmFinanceiro" class="form-control form-control-lg"
                                            placeholder="Bairro" required value="<%= candidato.bairroAdmFinanceiro %>" readonly />
                                    </div>
                                    <div class="mb-3">
                                        <label for="cidadeAdmFinanceiro">Cidade - Administrador Financeiro</label>
                                        <input type="text" name="cidadeAdmFinanceiro" class="form-control form-control-lg"
                                            placeholder="Cidade" required value="<%= candidato.cidadeAdmFinanceiro %>" readonly />
                                    </div>
                                    <div class="mb-3">
                                        <label for="ufAdmFinanceiro">UF - Administrador Financeiro</label>
                                        <select name="ufAdmFinanceiro" class="form-control form-control-lg" required disabled>
                                            <option value="" disabled selected hidden>Selecione o estado</option>
                                            <% uf.forEach(uf => { %>
                                                <option value="<%= uf.uf %>" <%= candidato.ufAdmFinanceiro == uf.uf ? 'selected' : '' %>>
                                                    <%= uf.uf %></option>
                                            <% }); %>
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <label for="cepAdmFinanceiro">CEP - Administrador Financeiro</label>
                                        <input type="text" name="cepAdmFinanceiro" class="form-control form-control-lg"
                                            placeholder="CEP" value="<%= candidato.cepAdmFinanceiro %>" data-mask="00000-000"
                                            readonly />
                                    </div>
                                    <div class="card-header bg-primary">
                                        <h5 class="text-light">Dados da Campanha</h5>
                                    </div>
                                    <div class="mb-3">
                                        <label for="dtInicioCampanha">Início da campanha</label>
                                        <input type="date" name="dtInicioCampanha" class="form-control form-control-lg"
                                            placeholder="  /  /  " required value="<%= candidato.dtInicioCampanha %>" readonly />
                                    </div>
                                    <div class="mb-3">
                                        <label for="dtFimCampanha">Fim da campanha</label>
                                        <input type="date" name="dtFimCampanha" class="form-control form-control-lg"
                                            placeholder="  /  /  " required value="<%= candidato.dtFimCampanha %>" readonly />
                                    </div>
                                    <div class="mb-3">
                                        <label for="dtTrava">Trava de data inicial - Contratos</label>
                                        <input type="date" name="dtTrava" class="form-control form-control-lg"
                                            placeholder="  /  /  "   value="<%= candidato.dtTrava %>" readonly />
                                    </div>
                                    <div class="mb-3">
                                        <label for="lmMilitantes">Limite de militantes</label>
                                        <input type="number" name="lmMilitantes" class="form-control form-control-lg"
                                            placeholder="Limite de militantes" required value="<%= candidato.lmMilitantes %>" readonly />
                                    </div>
                                    <div class="mb-3">
                                        <label for="lmVeiculos">Limite de veículos</label>
                                        <input type="number" name="lmVeiculos" class="form-control form-control-lg"
                                            placeholder="Limite de veículos" required value="<%= candidato.lmVeiculos %>" readonly />
                                    </div>

                                    <div class="mb-3">
                                        <input type="button" name="submit" value="Voltar"
                                            onclick="window.location.href='/candidato'"
                                            class="btn btn-danger btn-lg" />
                                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../layout/footer') %>
